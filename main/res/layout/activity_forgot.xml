<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.angelinealex.geolocationproject.ForgotActivity">


    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="587dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:weightSum="1"
        tools:layout_editor_absoluteX="-5dp"
        tools:layout_editor_absoluteY="-38dp">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="0.4dp"
            android:layout_weight="0.41"
            app:srcCompat="@drawable/bobcat" />
        <TextView
            android:id="@+id/forgot_text"
            style="@style/textView_Style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please Enter your email Id below" />
        <EditText
            android:id="@+id/forgot_email"
            style="@style/editText_style"
            android:layout_width="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            />



        <Button
            android:id="@+id/link_forgot"
            style="@style/button_style"
            android:layout_width="match_parent"
            android:text="Send link to  Email" />






    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="20dp"
        android:visibility="gone" />
</android.widget.RelativeLayout>
